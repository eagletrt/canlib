    (*map)[{{ outer_loop.index0 + ns.inner_loop }}].message = (void*) malloc(sizeof({{ network.name }}_message_{{ message_name }}_conversion));
{% else %}
    (*map)[{{ outer_loop.index0 + ns.inner_loop }}].message = NULL;
{% endif -%}
{% endif -%}
{% endfor -%}
{% endfor %}
{%- endfor %}
}

